(authentik_auth) {
        # Always forward outpost path to actual outpost
        reverse_proxy /outpost.goauthentik.io/* http://10.0.10.31:9000

        # Forward authentication to outpost
        forward_auth http://10.0.10.31:9000 {
                uri /outpost.goauthentik.io/auth/caddy
        
                # Capitalization of the headers is important, otherwise they will be empty
                copy_headers X-Authentik-Username X-Authentik-Groups X-Authentik-Email X-Authentik-Name X-Authentik-Uid X-Authentik-Jwt X-Authentik-Meta-Jwks X-Authentik-Meta-Outpost X-Authentik-Meta-Provider X-Authentik-Meta-App X-Authentik-Meta-Version
        
                trusted_proxies 10.0.10.31
        }
}

# Redirect short links to the FQDN. See:
# https://caddy.community/t/err-ssl-protocol-error-when-using-search-domain-to-complete-domain-name/10283

