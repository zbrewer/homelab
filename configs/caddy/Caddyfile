# Specific short links that are not the same as the host part of their FQDN:

http://code {
        redir https://codeserver.brew.foo{uri}
}

http://guac {
        redir https://guacamole.brew.foo{uri}
}

http://home {
        redir https://homepage.brew.foo{uri}
}

*.brew.foo {
        tls {
                dns cloudflare <api-key>
                resolvers 1.1.1.1
        }

        # Test endpoint for Caddy health check
        @health-check host test.brew.foo
        handle @health-check {
                respond /health-check 204
                respond 404
        }

        # Hydrogen proxmox node
        @hydrogen host hydrogen.brew.foo
        handle @hydrogen {
                reverse_proxy https://10.0.10.40:8006 {
                        transport http {
                                tls
                                tls_insecure_skip_verify
                        }
                }
        }
        
        # Helium proxmox node
        @helium host helium.brew.foo
        handle @helium {
                reverse_proxy https://10.0.10.20:8006 {
                        transport http {
                                tls
                                tls_insecure_skip_verify
                        }
                }
        }

        # Comet PoE IP KVM for Helium Proxmox Node
        @helium host helium-oob.brew.foo
        handle @helium-oob {
                reverse_proxy https://10.0.99.22 {
                        transport http {
                                tls
                                tls_insecure_skip_verify
                        }
                }
        }

        # Truenas
        @truenas host truenas.brew.foo
        handle @truenas {
                reverse_proxy https://10.0.20.10 {
                        transport http {
                                tls
                                tls_insecure_skip_verify
                        }
                }
        }

        # Truenas server IPMI
        @truenas-ipmi host truenas-ipmi.brew.foo
        handle @truenas-ipmi {
                import authentik_auth
                reverse_proxy https://10.0.99.20 {
                        header_up Host {http.request.host}
                        header_up X-Real-IP {http.request.remote}
                        header_up X-Forwarded-For {http.request.remote}
                        header_up X-Forwarded-Port {http.request.port}
                        header_up X-Forwarded-Proto {http.request.scheme}
                        transport http {
                                tls_insecure_skip_verify
                        }
                } 
        }

        # Truenas backup server
        @truenas-backup host truenas-backup.brew.foo
        handle @truenas-backup {
                reverse_proxy https://10.0.20.11 {
                        transport http {
                                tls
                                tls_insecure_skip_verify
                        }
                }
        }

        # TrueCommand
